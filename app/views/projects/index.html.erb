<div class="row-fluid">
  <div id="projects" class="span4 well">
    <% if user_signed_in? && Settings.choices %>
      <%= render 'users/choices_form' %>
    <% end %>

    <div>
      <h3 style="display:inline;">Projects</h3>
      <span class="pull-right"><%= link_to "New Project", new_project_path, :class => 'btn btn-primary' %></span>
    </div>

    <%= render 'list' %>
  </div>

  <div id="users" class="span8">
    <h2>Choices</h2>

    <%= render 'users/list', users: @users %>  
  </div>
</div>
